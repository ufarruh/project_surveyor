<%= link_to "Back to Home", "/"%>

<h3 class="text-center">Build Survey</h3>
<hr />
<div class="form-group">
  <p>Nex, fill in the questions</p>
  <h4>Title: </h4>
  <p>
    <%= @survey.title %>
  </p>
  <h4> Descriptoin:</h4>
  <p>
     <%= @survey.description %>
  </p>
  <hr />
  <h4>Add a Question: </h4>
  <p>Choose which type of question to add.</p>
  
    <%= form_for [@survey, @question] do |f| %>
    <div class="form-group">
    <%= f.hidden_field :survey_id %>
    <%= f.select(:title, [['Mutiple Choice', 'Mutiple Choice'], ['Number Range', 'Number Range']], { class: "form-control" }) %>
    <p></p>
    <%= f.submit "Add a New Question", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
